<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: "pure-form pure-form-stacked" }) do |f| %>
  <%= devise_error_messages! %>

  <div class="form-inputs">
  	<%= f.input :name, error: false %>
  	<%= f.input :phone, error: false %>
  	<%= f.input :company, error: false %>
    <%= f.input :email, required: true, autofocus: true, error: false %>
    <%= f.input :password, required: true, error: false %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Sign up", class: "pure-button pure-button-primary" %>
  </div>
<% end %>
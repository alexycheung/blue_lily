<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put, class: "pure-form pure-form-stacked" }) do |f| %>
  <%= devise_error_messages! %>

  <div class="form-inputs">
    <%= f.input :name, error: false, autofocus: true %>
    <%= f.input :phone, error: false %>
    <%= f.input :company, error: false %>
    <%= f.input :email, required: true, error: false %>
    <%= f.input :role, required: true, error: false, as: :select, collection: ["admin", "agent"] %>
    <%= f.input :password, autocomplete: "off", label: "New Password", required: false %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Update", class: "pure-button pure-button-primary" %>
  </div>
<% end %>
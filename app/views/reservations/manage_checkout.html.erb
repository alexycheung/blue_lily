<%= simple_form_for :unit, url: checkout_reservations_path, method: :post, html: { class: "pure-form pure-form-stacked", id: "checkout-unit" } do |f| %>
	<div class="form-inputs">
		<%= f.input :unit_id, autofocus: true, label: "Unit ID" %>
	</div>
	<div class="form-actions">
		<%= f.button :submit, "Checkout", class: "pure-button pure-button-primary large round" %>
	</div>
<% end %>

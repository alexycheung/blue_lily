<tr>
	<td><%= user.name %></td>
	<td><%= user.email %></td>
	<td><%= user.phone %></td>
	<td><%= user.role %></td>
	<td>
		<%= link_to edit_user_path(user), class: "pure-button" do %>
			<%= fa_icon "pencil" %>
		<% end %>
		<%= link_to user, method: :delete, data: { confirm: "Sure you want to delete #{user.name}? "}, class: "pure-button" do %>
			<%= fa_icon "trash" %>
		<% end %>
	</td>
</tr>
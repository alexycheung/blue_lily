<tr>
	<td><%= category.name %></td>
	<td class="nowrap">
		<%= link_to edit_category_path(category), class: "pure-button" do %>
			<%= fa_icon "pencil" %>
		<% end %>
		<%= link_to category, method: :delete, data: { confirm: "Sure you want to delete this category?" }, class: "pure-button" do %>
			<%= fa_icon "trash" %>
		<% end %>
	</td>
</tr>
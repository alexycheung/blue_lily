<tr id="item_<%= item.id %>">
	<td class="nowrap">
		<%= link_to zoom_path(item), remote: true do %>
			<%= filepicker_image_tag item.photo, fit: 'crop', w: 40, h: 40 %>
		<% end %>
	</td>
	<td>
		<%= link_to item.name, reservations_path(item), class: "reservations-index-link" %>
	</td>
	<td><%= item.size %></td>
	<td><%= item.color %></td>
	<td><%= item.category.name %></td>
	<td><%= item.condition %></td>
	<td>
		<% if item.is_reserved?(@property) %>
			<% if item.item_reservation(@property).reserved_at %>
				<%= item.item_reservation(@property).reserved_at.strftime("%D") %>
			<% end %>
		<% end %>
	</td>
	<td>
		<% if item.is_reserved?(@property) %>
			<% if item.item_reservation(@property).checkout %>
				<%= item.item_reservation(@property).checkout.strftime("%D") %>
			<% end %>
		<% end %>
	</td>
	<td>
		<% if item.is_reserved?(@property) %>
			<% if item.item_reservation(@property).checkin %>
				<%= item.item_reservation(@property).checkin.strftime("%D") %>
			<% end %>
		<% end %>
	</td>
	<td class="nowrap">
		<% if item.is_reserved?(@property) %>
			<%= link_to "Reserved", cancel_reservation_path(item, property_id: @property.id), remote: true, method: :post, class: "pure-button" %>
		<% else %>
			<%= link_to "Reserve", reserve_path(item, property_id: @property.id), remote: true, method: :post, class: "pure-button pure-button-primary" %>
		<% end %>
	</td>
</tr>
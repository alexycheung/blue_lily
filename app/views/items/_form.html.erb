<%= simple_form_for @item, html: { class: "pure-form pure-form-stacked" } do |f| %>
  <div class="form-inputs">
    <div class="input">
      <%= label_tag :photo %>
      <%= f.filepicker_field :photo, button_text: item_photo(@item), button_class: "upload-photo pure-button subtle-button", onchange: "onItemPhotoUpload(event)" %>
    </div>

    <legend></legend>

    <div class="pure-g">
      <div class="pure-u-1-4">
        <%= f.input :name, error: false, autofocus: true %>
      </div>
      <div class="pure-u-1-4">
        <%= f.input :color, error: false %>
      </div>
      <div class="pure-u-1-4">
        <%= f.input :size, error: false, as: :select, collection: ["S", "M", "L"] %>    
      </div>
      <div class="pure-u-1-4">
        <%= f.input :category_id, error: false, as: :select, collection: @categories, include_blank: "", selected: @item.category ? @item.category.id : nil %>
      </div>
      
      <div class="pure-u-1-4">
        <%= f.input :description, error: false %>
      </div>
      <div class="pure-u-1-4">
        <%= f.input :dimensions, error: false %>
      </div>
      <div class="pure-u-1-4">
        <%= f.input :vendor_id, error: false, as: :select, collection: Vendor.active.by_name, selected: @item.vendor ? @item.vendor.id : nil, include_blank: "" %>
      </div>
      <div class="pure-u-1-4">
        <%= f.input :vendor_item_number, error: false %>
      </div>
    </div>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Save", class: "pure-button pure-button-primary large round" %>
  </div>
<% end %>

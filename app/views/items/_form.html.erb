<%= simple_form_for @item, html: { class: "pure-form pure-form-stacked" } do |f| %>
  <div class="form-inputs">
    <div class="input">
      <%= label_tag :photo %>
      <%= f.filepicker_field :photo, button_text: item_photo(@item), button_class: "upload-photo pure-button subtle-button", onchange: "onPhotoUpload(event)" %>
    </div>
    <%= f.input :name, error: false, autofocus: true %>
    <%= f.input :color, error: false %>
    <%= f.input :description, error: false %>
    <%= f.input :size, error: false, as: :select, collection: ["S", "M", "L"] %>
    <%= f.input :company, error: false %>
    <%= f.input :condition, error: false, as: :select, collection: ["new", "like new", "very good", "good", "acceptable", "unacceptable"] %>
    <%= f.input :category_id, error: false, as: :select, collection: @categories, include_blank: "", selected: @item.category ? @item.category.id : nil %>
    <%= f.input :purchase_price, error: false %>
    <%= f.input :sale_price, error: false %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Save", class: "pure-button pure-button-primary large round" %>
  </div>
<% end %>

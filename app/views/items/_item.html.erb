<tr>
	<!-- TODO: item availability -->
	<td></td>
	<td><%= item.name %></td>
	<td><%= item.size %></td>
	<td><%= item.color %></td>
	<td><%= item.category.name %></td>
	<td><%= item.condition %></td>
	<td>
		<%= link_to edit_item_path(item), class: "pure-button" do %>
			<%= fa_icon "pencil" %>
		<% end %>
		<%= link_to item, method: :delete, data: { confirm: "Sure you want to delete this item? "}, class: "pure-button" do %>
			<%= fa_icon "trash" %>
		<% end %>
	</td>
</tr>
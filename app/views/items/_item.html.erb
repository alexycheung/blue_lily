<tr>
	<td class="nowrap">
		<%= link_to zoom_path(item), remote: true do %>
			<%= filepicker_image_tag item.photo, fit: 'crop', w: 40, h: 40 %>
		<% end %>
	</td>
	<td>
		<%= item.name %>
	</td>
	<td>
		<%= item.vendor.name if item.vendor_id %>
	</td>
	<td><%= item.size %></td>
	<td><%= item.color %></td>
	<td><%= item.category.name %></td>
	<td><%= item.condition %></td>
	<td><%= item_status(item) %></td>
	<td class="nowrap">
		<%= link_to reservations_path(item_id: item.id), class: "pure-button icon-button" do %>
			<%= fa_icon "calendar" %>
		<% end %>
		<%= link_to edit_item_path(item), class: "pure-button icon-button" do %>
			<%= fa_icon "pencil" %>
		<% end %>
		<%= link_to item, method: :delete, data: { confirm: "Sure you want to delete this item? "}, class: "pure-button icon-button" do %>
			<%= fa_icon "trash" %>
		<% end %>
	</td>
</tr>
